PORT=4000
MONGO_URI=mongodb://localhost:27017/acre
CROSSREF_MAILTO=youremail@example.com
CHECK_INTERVAL_MINUTES=1440
JWT_SECRET=replace_this_for_prod

# Redis (BullMQ)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Puppeteer / Chrome
PUPPETEER_EXECUTABLE_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe
# or on Linux: /usr/bin/chromium-browser
# If empty, code will attempt wkhtmltopdf fallback (requires wkhtmltopdf binary)

# S3 / MinIO
S3_ENDPOINT=http://127.0.0.1:9000          # MinIO endpoint (or Amazon S3 URL)
S3_REGION=us-east-1
S3_BUCKET=acre-reports
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true                   # for MinIO

# i18n default locale
DEFAULT_LOCALE=en

